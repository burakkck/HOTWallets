@{
    var cardId = Convert.ToInt32(User.FindFirstValue(ClaimTypes.NameIdentifier));
}

@model HOTWallets.Pages.MainModel

<turbo-stream action="replace" target="addwallet-frame">
    <template>
        <turbo-frame id="addwallet-frame">
        <partial name="_AddWallet.cshtml" model="@Model"/>
        </turbo-frame>
    </template>
</turbo-stream>

<turbo-stream action="append" target="wallets">
    <template>
        <partial name="_ShowWallet.cshtml" model="@Model.Wallet" />
    </template>
</turbo-stream>