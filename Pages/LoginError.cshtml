@model IndexModel

<turbo-frame id="login-frame">
    <form method="post">
        <input type="hidden" name="authenticity_token" autocomplete="off" />
        <div class="flex flex-col justify-center items-center w-96">
            <div class="flex flex-col my-3 w-full">
                <label class="index-label" for="username">Username</label>
                <input asp-for="@Model.Card.Username" required="required" class="rounded-full" type="text" name="username" />
            </div>

            <div class="flex flex-col my-3 w-full">
                <label class="index-label" for="user_password">Password</label>
                <input asp-for="@Model.Card.Password" required="required" class="rounded-full" type="password" name="password" />
            </div>

            <div>
                <div class="flex flex-col justify-center items-center">
                    <button asp-page="/Index" data-turbo="false" asp-page-handler="SignIn" class="my-2 w-full flex justify-center py-2 px-6  text-xl font-medium rounded-full text-white bg-gradient-to-r from-[#CE00D2] to-zinc-700 ">
                        Sign In
                    </button>
                    <a asp-page="/Index" asp-page-handler="SignUp" class="my-2  w-full flex justify-center py-2 px-6 font-bold  text-xl text-transparent text-8xl bg-clip-text bg-gradient-to-r from-[#CE00D2] to-zinc-700 ">
                        Sign Up
                    </a>
                </div>
            </div>
        </div>
    </form>
    <p class="text-red-500">kullanıcı adı veya şifre hartalı</p>
</turbo-frame>